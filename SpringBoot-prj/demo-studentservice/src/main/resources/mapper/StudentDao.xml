<?xml version="1.0" encoding="UTF-8" ?><!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.blithe.dao.StudentDao">
    
    <!--按手机号查询student-->
    <select id="selectByPhone" resultType="com.blithe.model.Student">
        select * from student where phone = #{phone}
    </select>
    
    <insert id="insertStudent">
        insert into student(name,phone,age) values (#{name},#{phone},#{age})
    </insert>
    
    <select id="selectById" resultType="com.blithe.model.Student">
        select * from student where id = #{id}
    </select>
</mapper>
